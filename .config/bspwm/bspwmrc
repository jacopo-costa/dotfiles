#! /bin/sh

sxhkd &
setxkbmap -option compose:ralt &

bspc monitor -d 1 2 3 4

bspc config border_width         	2
bspc config window_gap          	10
bspc config normal_border_color		"#151515"
bspc config focused_border_color	"#ac4142"
bspc config presel_feedback_color "#ac4142"

bspc config split_ratio          	0.50
bspc config borderless_monocle   	true
bspc config gapless_monocle      	true
bspc config focus_follows_pointer	true

bspc rule -a Pavucontrol state=floating

## Autostart programs ##

/usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1 &
feh --bg-fill --no-fehbg /home/jacopo/Immagini/Sfondi/wallhaven-x8z75z.png &
picom --experimental-backend --config $HOME/.config/picom/picom.conf &
dunst &
$HOME/.config/polybar/launch.sh &
